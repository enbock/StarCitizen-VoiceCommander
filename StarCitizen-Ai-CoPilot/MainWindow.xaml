<Window x:Class="StarCitizen_Ai_CoPilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarCitizen_Ai_CoPilot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Margin="10">
                <Ellipse Name="RecordingIndicator" Width="20" Height="20" Fill="Gray" />
                <Ellipse Name="SpeechDetectedIndicator" Width="20" Height="20" Fill="Gray" Margin="0,10,0,0" />
            </StackPanel>
            <TextBlock Name="TranscriptionTextBlock" FontSize="24" Text="Bereit" Margin="20,10,0,0" TextWrapping="Wrap" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
